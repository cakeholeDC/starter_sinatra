<!DOCTYPE html>
<html>
<head>
	<title><%= @customer.name %></title>
</head>
<body>
	<h1><%= @customer.name %></h1>
	<p>Gender: <%= @customer.gender %></p>

	<p>Pending Orders</p>

	<% @customer.food_customers.each do |order| %>
	<div style="padding-bottom: 10px; padding-left: 25px; width: 20%;">
		<hr/>
		<h3><a href="/orders/<%= order.id %>">Order ID: <%= order.id %></a></h3>
		<p>Food Ordered: <%= order.food.name %></p>
	</div>
	<% end %> 

	<div style="padding-bottom: 10px; padding-left: 25px; width: 20%;">
		<hr/>
	</div>
	<p><a href="/customers/<%=@customer.id%>/edit">Edit this Customer</a></p>

	<form action="/customers/<%=@customer.id%>" method="POST">
		<input type="hidden" name="_method" value="DELETE">
		<input type="submit" name="delete" value="Delete this customer">
	</form>

	<p><a href="/customers">Back to Customers List</a></p>

	<p><a href='/'>Return to Homepage</a></p>

</body>
</html>