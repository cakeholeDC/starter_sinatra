<!DOCTYPE html>
<html>
<head>
	<title>Edit Order <%= @order.id %></title>
</head>
<body>
	<h1>Edit Order <%= @order.id %></h1>

	<form method="POST" action="/orders/<%=@order.id%>">
		<input type="hidden" name="_method" value="PUT">
		<h2>Please Select a new Customer</h2>
		
		<label for="customer_id">Customer Name</label>
		<select name="customer_id">
			<% @customers.each do |customer| %>
				<option value=<%= customer.id%> <%='selected' if @order.customer.id==customer.id %> ><%=customer.name%></option>
			<% end %>
		</select>
		
		<h2>Please Select the new item to order</h2>
		<label for="food_id">Food: </label>
		<select name="food_id">
			<% @foods.each do |food| %>
				<option value=<%= food.id%> <%='selected' if @order.food.id==food.id %> ><%=food.name%></option>
			<% end %>
		</select>
		
		<div style="padding-top: 10px">
			<input type="submit" value="Update Order">
		</div>
	</form>

</body>
</html>